<!-- "Call Banner" for primary call, the foregound or ringing call. The "call banner" is a block
    of info about a single call, including the contact name, phone number, call time counter, and
    other status info.  This info is shown as a "banner" overlaid across the top of contact photo.
    -->
<!-- BEGIN BOWAY, yulong.tan, 20150422, InCall UI. -->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/window_primary_call_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"
        android:orientation="vertical" 
        android:visibility="gone">
        
        <TextView
            android:id="@+id/window_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:text="@string/window_name"
            android:textColor="@android:color/white"
            android:textSize="35sp" 
            />

        <TextView
            android:id="@+id/window_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/window_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/window_number"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/window_elapsedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/window_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="@string/window_elapsed_time"
            android:textColor="@android:color/white"
            android:textSize="20sp" />              
</RelativeLayout>

