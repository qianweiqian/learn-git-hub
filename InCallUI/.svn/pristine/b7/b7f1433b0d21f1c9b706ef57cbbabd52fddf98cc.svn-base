<!-- Layers used to render the in-call "Hold" compound button. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- BEGIN BOWAY, yulong.tan, 20150423, InCall UI. -->
    <!-- The standard "compound button" background. -->
    <item android:drawable="@android:color/transparent" />

    <!-- ...and the actual icon on top.  Use an explicit <bitmap> to avoid scaling
         the icon up to the full size of the button. -->
    <item android:id="@+id/holdPhoneDisabledItem" >
        <bitmap android:src="@drawable/simple_ic_hold_disable"
                android:gravity="center"/>
    </item> 
    <item android:id="@+id/holdPhoneOffItem">
        <bitmap android:src="@drawable/simple_ic_hold_off"
                android:gravity="center"/>
    </item>
    <item android:id="@+id/holdPhoneOnItem"> 
        <bitmap android:src="@drawable/simple_ic_hold"
                android:gravity="center" />
    </item>
    <!-- END BOWAY, yulong.tan -->
</layer-list>
